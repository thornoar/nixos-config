{
    // Workspaces
    "hyprland/workspaces": {
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-focused": "-{}-",
        "persistent-workspaces": {
            "*": 10
        }
    },

    // Clock
    "clock": {
      "format": "{:%H:%M:%S %a %d}",
      "interval": 1,
      "tooltip": false
    },

    // CPU
    "cpu": {
        "format": "CPU {usage}%",
        "tooltip": false
    },

    // Memory
    "memory": {
        "format": "MEM {}%",
        "tooltip": false
    },

    "hyprland/language": {
        "format": "{}",
        "format-ru": "RU",
        "format-en": "US"
    }, 

    // Network
    "network": {
        "format": "{ifname}",
        "format-wifi": "WIFI {signalStrength}%",
        "format-ethernet": "ETH {ifname}",
        "format-disconnected": "OFFLINE",
        "tooltip-format": "",
        "tooltip-format-wifi": "",
        "tooltip-format-ethernet": "",
        "tooltip-format-disconnected": "OFFLINE",
        "max-length": 50
    },

    // Battery
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "BAT {capacity}%",
        "format-plugged": "CHARGE {capacity}%",
        "tooltip": false
    },

    // Pulseaudio
    "pulseaudio": {
        "format": "{volume}% VOL",
        "format-muted": "MUTED",
        "format-source": "VOL {volume}%",
    },


    // backlight:
    "backlight": {
        "format": "BRI {percent}%",
        "scroll-step": 1,
        "tooltip": false
    }
}
