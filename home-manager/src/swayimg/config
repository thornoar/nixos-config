[keys.viewer]
F1 = help
Home = first_file
End = last_file
Prior = prev_file
Next = next_file
Space = next_file
Shift+r = rand_file
Shift+d = prev_dir
d = next_dir
Shift+o = prev_frame
o = next_frame
c = skip_file
n = animation
f = fullscreen
Return = mode gallery
Left = step_left 10
Right = step_right 10
Up = step_up 10
Down = step_down 10
Shift+Up = zoom +10
Shift+Down = zoom -10
s = zoom width
a = zoom fit
BackSpace = zoom optimal
bracketleft = rotate_left
bracketright = rotate_right
r = rotate_right
m = flip_vertical
Shift+m = flip_horizontal
Ctrl+r = reload
i = info
Shift+Delete = exec rm -f '%' && echo "File removed: %"; skip_file
q = exit

